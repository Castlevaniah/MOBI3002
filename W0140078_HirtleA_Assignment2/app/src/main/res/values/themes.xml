<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base 80s Neon Calculator Theme -->
    <style name="Theme.M01_Calculator" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Background -->
        <item name="android:colorBackground">#0D0D1A</item>
        <item name="android:windowBackground">#0D0D1A</item>

        <!-- Neon Colors -->
        <item name="colorPrimary">#FF33FF</item>
        <item name="colorPrimaryVariant">#6600CC</item>
        <item name="colorOnPrimary">#00FFFF</item>

        <item name="colorSecondary">#FF66CC</item>
        <item name="colorSecondaryVariant">#3300FF</item>
        <item name="colorOnSecondary">#FFFFFF</item>

        <!-- Text -->
        <item name="android:textColor">#00FFFF</item>
        <item name="android:fontFamily">monospace</item>

        <!-- Buttons -->
        <item name="android:buttonStyle">@style/NeonButton</item>
    </style>

    <!-- Custom Neon Button Style -->
    <style name="NeonButton" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/neon_button</item>
        <item name="android:textColor">#00FFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:elevation">8dp</item>
    </style>

</resources>
