<?xml version="1.0" encoding="utf-8"?>
<!-- full canvas + glass control panel -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- the animation canvas -->
    <com.example.m03_bounce.BouncingBallView
        android:id="@+id/custView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- bottom panel uses our glass background -->
    <ScrollView
        android:id="@+id/panelScroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:fillViewport="true"
        android:background="@drawable/bg_panel"
        android:elevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="14dp">

            <!-- small header for context -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ADD BALL"
                android:textColor="#EDEBFF"
                android:textSize="12sp"
                android:letterSpacing="0.05" />

            <!-- row 1: name, x, y -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_marginTop="8dp">

                <!-- name -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingEnd="6dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:textColor="#AFAAEF"
                        android:textSize="11sp"/>
                    <EditText
                        android:id="@+id/etName"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:background="@drawable/bg_input"
                        android:paddingHorizontal="12dp"
                        android:textColor="#0D0D12"
                        android:hint="e.g., Ball"
                        android:textSize="14sp"
                        android:inputType="textPersonName"/>
                </LinearLayout>

                <!-- x -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingHorizontal="3dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="X"
                        android:textColor="#AFAAEF"
                        android:textSize="11sp"/>
                    <EditText
                        android:id="@+id/etX"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:background="@drawable/bg_input"
                        android:paddingHorizontal="12dp"
                        android:textColor="#0D0D12"
                        android:hint="e.g., 250"
                        android:textSize="14sp"
                        android:inputType="numberDecimal"/>
                </LinearLayout>

                <!-- y -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="6dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Y"
                        android:textColor="#AFAAEF"
                        android:textSize="11sp"/>
                    <EditText
                        android:id="@+id/etY"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:background="@drawable/bg_input"
                        android:paddingHorizontal="12dp"
                        android:textColor="#0D0D12"
                        android:hint="e.g., 350"
                        android:textSize="14sp"
                        android:inputType="numberDecimal"/>
                </LinearLayout>
            </LinearLayout>

            <!-- row 2: dx, dy, color -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_marginTop="8dp">

                <!-- dx -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingEnd="6dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="dX"
                        android:textColor="#AFAAEF"
                        android:textSize="11sp"/>
                    <EditText
                        android:id="@+id/etDx"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:background="@drawable/bg_input"
                        android:paddingHorizontal="12dp"
                        android:textColor="#0D0D12"
                        android:hint="e.g., 6"
                        android:textSize="14sp"
                        android:inputType="numberDecimal"/>
                </LinearLayout>

                <!-- dy -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingHorizontal="3dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="dY"
                        android:textColor="#AFAAEF"
                        android:textSize="11sp"/>
                    <EditText
                        android:id="@+id/etDy"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:background="@drawable/bg_input"
                        android:paddingHorizontal="12dp"
                        android:textColor="#0D0D12"
                        android:hint="e.g., 3"
                        android:textSize="14sp"
                        android:inputType="numberDecimal"/>
                </LinearLayout>

                <!-- color -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="6dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Color"
                        android:textColor="#AFAAEF"
                        android:textSize="11sp"/>
                    <Spinner
                        android:id="@+id/spColor"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:background="@drawable/bg_input"/>
                </LinearLayout>
            </LinearLayout>

            <!-- actions -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">

                <Button
                    android:id="@+id/btnClear"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:minWidth="96dp"
                    android:background="@drawable/btn_outline"
                    android:text="CLEAR"
                    android:textAllCaps="false"
                    android:textColor="#D7DBFF"/>

                <Button
                    android:id="@+id/btnAdd"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginStart="12dp"
                    android:background="@drawable/btn_primary"
                    android:minWidth="96dp"
                    android:text="ADD"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
