<?xml version="1.0" encoding="utf-8"?>
<!-- bottom control panel: glassy + soft neon edge -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- subtle outer neon stroke -->
    <item>
        <shape android:shape="rectangle">
            <corners android:topLeftRadius="18dp" android:topRightRadius="18dp"/>
            <solid android:color="#00000000"/>
            <stroke android:width="2dp" android:color="#7736C2FF"/> <!-- cyan-like glow -->
        </shape>
    </item>

    <!-- inner translucent gradient so the blue canvas still shows through -->
    <item android:left="1dp" android:top="1dp" android:right="1dp">
        <shape android:shape="rectangle">
            <corners android:topLeftRadius="16dp" android:topRightRadius="16dp"/>
            <gradient
                android:startColor="#B0171633"/>   <!-- deep purple w/ alpha -->
            android:endColor="#B00E0E28"
            android:angle="270"/>
            <stroke android:width="1dp" android:color="#5536C2FF"/>
            <padding android:left="8dp" android:top="8dp" android:right="8dp" android:bottom="12dp"/>
        </shape>
    </item>
</layer-list>
