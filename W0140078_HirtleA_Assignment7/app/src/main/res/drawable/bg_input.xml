<?xml version="1.0" encoding="utf-8"?>
<!-- inputs look like small glass cards -->
<ripple xmlns:android="http://schemas.android.com/apk/res/android" android:color="#2236C2FF">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="12dp"/>
            <solid android:color="#F9FAFF"/>           <!-- near white for contrast -->
            <stroke android:width="1dp" android:color="#E2E6FF"/>
            <padding android:left="10dp" android:top="8dp" android:right="10dp" android:bottom="8dp"/>
        </shape>
    </item>
</ripple>
