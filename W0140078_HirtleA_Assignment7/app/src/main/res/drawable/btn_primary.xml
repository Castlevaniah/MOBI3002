<?xml version="1.0" encoding="utf-8"?>
<!-- primary neon button -->
<ripple xmlns:android="http://schemas.android.com/apk/res/android" android:color="#5536C2FF">
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <corners android:radius="14dp"/>
            <solid android:color="#FFFFFFFF"/>
        </shape>
    </item>
    <item>
        <selector>
            <item android:state_pressed="true">
                <shape android:shape="rectangle">
                    <corners android:radius="14dp"/>
                    <gradient android:startColor="#5A7BFF" android:endColor="#3E50FF" android:angle="270"/>
                    <stroke android:width="2dp" android:color="#7AD9FF"/>
                    <padding android:left="18dp" android:top="10dp" android:right="18dp" android:bottom="10dp"/>
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="14dp"/>
                    <gradient android:startColor="#6C6DFF" android:endColor="#4C4DFF" android:angle="270"/>
                    <stroke android:width="2dp" android:color="#6FD2FF"/>
                    <padding android:left="18dp" android:top="10dp" android:right="18dp" android:bottom="10dp"/>
                </shape>
            </item>
        </selector>
    </item>
</ripple>
